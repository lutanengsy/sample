<h1>Listing deliveries</h1>

<table id="deliveries">
  <thead>
  <tr>
    <th>Date</th>
    <th>Delivery Code</th>
    <th>Total Amount</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
<% @deliveries.each do |delivery| %>
  <tr>
    <td class="center"><%= delivery.delivery_date %></td>
    <td class="center"><%= delivery.delivery_no %></td>
    <td class="right"><%= number_to_currency(delivery.total_amount, :unit => '') %></td>
    <td class="center">
      <%= link_to 'Show', delivery %>
      <%= link_to 'Edit', edit_delivery_path(delivery) %>
      <%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<div class="clear"></div>

<%= link_to 'New Delivery', new_delivery_path %>
