      <%= f.label :customer %>
      <%= f.select :customer_id, options_from_collection_for_select(@customers, "id","name",@order.customer_id), :include_blank => true, :class => "focus" %>
    </div>
  
    <div class="field">
      <%= f.label :total_amount %>
      <%= f.text_field :total_amount, readonly: true %>
    </div>

    <%= f.submit 'Save' %>
  </div>
<% end %>
