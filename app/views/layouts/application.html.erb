<!DOCTYPE html>
<html>
<head>
  <title>Sample</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="pre_header_container">
    <%#= render :partial => "users/user_bar" %>
  </div>
		
  <div class="container">
    <div id="header">
      <div id="logo">Sample</div>
      <%= render 'shared/menu' %>
    </div>
    <div class="clear"></div>
    <div id="main">
      <% if notice %>
	<p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
	<p class="alert"><%= alert %></p>
      <% end %>  
      <%= yield %>	
    </div>
  </div>
</body>
</html>
