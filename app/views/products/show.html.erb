<div id="panel1">
	<h3><%= @product.name %></h3>
	<div class="data">
		<label>Name</label>: <%= @product.name %><br/>
		<label>Size</label>: <%= @product.size %><br/>
		<label>Count Per Pack</label>: <%= @product.count_per_pack %><br/>
		<label>Price</label>: <%= @product.price %><br/>
		<label>SRP</label>: <%= @product.srp %><br/>				
	</div>
	<div id="actions">
		<%= link_to 'Back', products_url, :class => 'actions' %> <%= link_to 'Edit', edit_product_url(@product) %>
	</div>
</div>
<div class="clear"></div>
