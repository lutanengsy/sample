<h1>Listing products</h1>
<div>
<table id="products">
  <thead>
    <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Size</th>
    <th>Count per pack</th>
    <th>Price</th>
    <th>Srp</th>
    <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @products.each do |product| %>
  <tr>
    <td class="center"><%= product.code %></td>
    <td><%= product.name %></td>
    <td class="center"><%= product.size %></td>
    <td class="center"><%= product.count_per_pack %></td>
    <td class="right"><%= number_with_precision(product.price, precision:2) %></td>
    <td class="right"><%= number_with_precision(product.srp, precision:2) %></td>
    <td class="center">
      <%= link_to 'Show', product %>
      <%= link_to 'Edit', edit_product_path(product) %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
<div>
<div class="clear"></div>
<%= link_to 'New', new_product_path %>
