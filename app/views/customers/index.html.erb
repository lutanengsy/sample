<h1>Listing customers</h1>
<div>
<table id="customers">
  <thead>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Contact no</th>
    <th>Contact person</th>
    <th>Terms</th>
    <th colspan="3">Actions</th>
  </thead>
  <tbody>
<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><%= customer.address %></td>
    <td class="center"><%= customer.city %></td>
    <td class="center"><%= customer.state %></td>
    <td class="center"><%= customer.zip %></td>
    <td class="center"><%= customer.contact_no %></td>
    <td><%= customer.contact_person %></td>
    <td class="center"><%= customer.terms %></td>
    <td class="center">
      <%= link_to 'Show', customer %>
      <%= link_to 'Edit', edit_customer_path(customer) %>
      <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>
</div>
<div class="clear"></div>
<%= link_to 'New', new_customer_path %>
